<% if current_user %>
<div class="user">
  <%= link_to "Sign_out", destroy_user_session_path, method: :delete, class: "line" %>
</div>
<div class="user">
  <%= link_to "本を追加", new_book_path, class: "line" %>
</div>
<div class="user">
  <%= link_to "ユーザー情報変更", edit_user_path(current_user), class: "line" %>
</div>
<div class="uesr">
  <p>
    <%= current_user.nickname %>さんが本を読む目的
  </p>
  <p>
    <%= current_user.purpose %>
  </p>
</div>
<div class="uesr"><%= current_user.nickname %>さんが今までに読んだ本</div>
<% @books.each do |book| %>
<div>タイトル：<%= book.title %></div>
<div>著者：<%= book.author %></div>
<% end %>

<% else %>
<div class="user">
  <%= link_to "Sign_in", new_user_session_path, class: "line" %>
</div>
<div class="user">
  <%= link_to "Sign_up", new_user_registration_path, class: "line"  %>
</div>
<% end  %>
