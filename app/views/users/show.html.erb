<% if current_user %>
<div class="view__cover">
  <div class="user">
    <%= link_to "本を追加", new_book_path, class: "line user__book-create" %>
    <p>
      <%= current_user.nickname %>さんが本を読む目的は
    </p>
    <p>
      <% if current_user.purpose.blank? %>
      まだありません
      <% else %>
      「<%= current_user.purpose %>」です!
      <% end %>
    </p>
    <p><%= current_user.nickname %>さんが今までに読んだ本<%= @books.count %>冊</p>
  </div>

  <div class="books">
    <% @books.each do |book| %>
    <div class="book">
      <div>タイトル: <%= book.title %></div>
      <div>著者: <%= book.author %></div>
      <div>最終更新日: <%= book.updated_at.to_s(:datetime_jp) %></div>
      <div class="book__info">
        <div><%= link_to "詳細を見る",  book_path(book.id), class: "line"%></div>
        <div><%= link_to "編集する",  edit_book_path(book.id), class: "line"%></div>
        <div><%= link_to "削除する",  book_path(book.id), method: :delete, class: "line"%></div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<% end  %>
